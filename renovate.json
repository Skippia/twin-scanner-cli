{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "master"
  ],
  "automerge": false,
  "packageRules": [
    {
      "description": "Auto merge patch updates",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "labels": [
        "dependencies",
        "patch"
      ],
      "automerge": true,
      "groupName": "patch updates",
      "commitMessagePrefix": "fix(renovate): patch"
    },
    {
      "description": "Minor updates require manual review",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "minor"
      ],
      "groupName": "minor updates",
      "commitMessagePrefix": "fix(renovate): minor"
    },
    {
      "description": "Major updates require manual review",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "update"
      ],
      "groupName": "major updates",
      "commitMessagePrefix": "fix(renovate): major"
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "@types/node"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "pinDigests": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "npm": {
    "minimumReleaseAge": "3 days"
  },
  "separateMinorPatch": true,
  "postUpdateOptions": [
    "pnpmDedupe",
    "npmDedupe",
    "yarnDedupeFewer"
  ],
  "prConcurrentLimit": 10,
  "prHourlyLimit": 0,
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "timezone": "Europe/Zurich"
}
